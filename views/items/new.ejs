<%- include('../partials/header') %>

<% if (typeof error !== 'undefined' && error) { %>
    <p class="error-message"><%= error %></p>
<% } %>

<form action="/items" method="POST">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>" required>
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="3"><%= typeof description !== 'undefined' ? description : '' %></textarea>
    </div>
    <button type="submit" class="submit-btn">Create Item</button>
</form>
<p><a href="/ui/items">Back to List</a></p>

<%- include('../partials/footer') %>